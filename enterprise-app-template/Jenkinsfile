pipeline {
    agent any
    stages {
        stage('Build Backend') {
            steps {
                sh 'mvn clean install -f backend/pom.xml'
            }
        }
        stage('Build Docker Images') {
            steps {
                sh 'docker build -t your-dockerhub-username/backend:latest -f backend/Dockerfile .'
                sh 'docker build -t your-dockerhub-username/frontend:latest -f frontend/Dockerfile .'
            }
        }
        stage('Push Docker Images') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-creds', url: 'https://index.docker.io/v1/']) {
                    sh 'docker push your-dockerhub-username/backend:latest'
                    sh 'docker push your-dockerhub-username/frontend:latest'
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f kubernetes/'
            }
        }
    }
}
